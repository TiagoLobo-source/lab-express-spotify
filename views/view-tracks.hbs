<style>
  #Albums-List{  text-align: center; } 
  button{margin-bottom: 20px;}
</style>
<body>
  <div id="Albums-List">
     <h1>List of artists</h1>
      {{#each tracks}}
        <div>
          <h2>{{name}}</h2>
          <div class="audio-full-length">
            <audio controls>
              <source src="{{preview_url}}" type="audio/mpeg">
              Your browser does not support the audio element.
            </audio>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</body>